---
import Layout from '../layout.astro';
import Nav from '../components/nav.astro';
import ServicesHero from '../components/servicesHero.astro';
import ServicesCard from '../components/servicesCard.astro';
import Footer from '../components/footer.astro';
---

<Layout title="Buga Software" aurora={false}>
  <Nav/>
  <main class="space-y-5 flex flex-col min-h-screen px-6 lg:px-32 md:px-16">
    <ServicesHero />
    <div class="grid lg:grid-cols-2 gap-6 text-[var(--whitebg)] pb-9 pt-9">
      <ServicesCard title='Desarrollo web' description='Utilizamos las últimas tecnologías y las mejores prácticas del sector para construir sitios dinámicos, escalables y alineados con los objetivos de tu negocio.' price='$400.000 COP' icon='<svg  xmlns="http://www.w3.org/2000/svg"  width="36"  height="36"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-app-window"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 5m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" /><path d="M6 8h.01" /><path d="M9 8h.01" /></svg>'/>
      <ServicesCard title='Diseño Web' description='Creamos interfaces atractivas, modernas y funcionales que elevan la experiencia del usuario, listas para ser implementadas por tu equipo o desarrollador de confianza.' price='$200.000 COP' icon='<svg  xmlns="http://www.w3.org/2000/svg"  width="36"  height="36"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-pencil-code"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" /><path d="M13.5 6.5l4 4" /><path d="M20 21l2 -2l-2 -2" /><path d="M17 17l-2 2l2 2" /></svg>'/>
    </div>
  </main>
  <Footer />
</Layout>
