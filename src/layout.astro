---
interface Props {
  title: string;
  silk?: boolean;
}

const { title, silk = true } = Astro.props;

import "./styles/global.css";
import Silk from "./components/react/Silk.tsx";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Creamos soluciones digitales personalizadas que optimizan procesos y potencian el crecimiento de negocios en la ciudad de Buga" />
    
    <title>{title}</title>
  </head>

  <body class="bg-black">
    {silk && (
    <div class="absolute w-full h-full top-0 left-0 z-[-1]">
      <Silk 
        client:only="react"
        speed={5}
        scale={0.8}
        color="#1d2540"
        noiseIntensity={1.5}
        rotation={0}
      />
      <div class="absolute w-full h-full top-0 left-0" style="background: linear-gradient(to bottom, transparent 80%, #000000 100%);"></div>
    </div>
    )}
    <slot />
  </body>
</html>

<script>
  // Smooth scrolling
  import Lenis from "lenis";

  const lenis = new Lenis({
    autoRaf: true,
  });
</script>
