---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="card group border shadow-inner mx-auto shadow-gray-600 aspect-square border-white/25 px-10 gap-2 rounded-xl w-80 flex flex-col pt-16 items-center transition-colors duration-200 relative overflow-hidden hover:shadow-blue-600 hover:border-blue-600">

  <!-- <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-[#007BFF]/10 to-transparent opacity-80 blur-2xl pointer-events-none"></div> -->
  
  <div class="flex justify-center relative">
    <!-- <div class="absolute w-16 h-16 bg-[#007BFF]/30 blur-2xl rounded-full transition-all ease-in-out duration-500"></div> -->
    <div class="p-3 flex items-center justify-center rounded-full border border-white/20 bg-white/5 transition-all duration-200 group-hover:border-[#007BFF]/40 group-hover:shadow-[0_0_20px_rgba(0,123,255,0.3)] text-white group-hover:text-[#007BFF]">
      <Fragment set:html={icon} />
    </div>
  </div>

  <h4 class="text-balance font-semibold text-base relative z-10">{title}</h4>
  <p class="text-pretty text-[var(--whitebg)] leading-5 text-xs relative z-10">{description}</p>
</div>

