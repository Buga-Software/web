---
const formAction = import.meta.env.VITE_FORMSPREE_URL;
---

<section
    id="contacto"
    class="flex flex-col gap-6 py-10 lg:py-30 justify-center items-center w-full"
>
    <div class="text-center space-y-3 max-w-2xl">
        <h2
            class="text-3xl md:text-4xl font-bold leading-tight text-[var(--text-primary)] pl-4"
        >
            No dudes en contactarnos
        </h2>
        <p
            class="text-[var(--text-secondary)] opacity-90 hidden md:block"
        >
            Cada proyecto exitoso inicia con una conversación
        </p>
    </div>

    <div class="w-full max-w-3xl">
        <form
            id="contact-form"
            action={formAction}
            method="POST"
            class="flex flex-col gap-5 p-4 md:p-6"
        >
            <div class="flex flex-col">
                <label class="mb-1 text-sm font-medium text-[var(--text-primary)]"
                    >Nombre o Razón Social</label
                >
                <input
                    type="text"
                    name="from_name"
                    placeholder="Juan Pérez"
                    required
                    class="px-4 py-3 bg-black/30 text-[var(--text-secondary)] border border-white/20 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--accent)] placeholder-white/30"
                />
            </div>

            <div class="flex flex-col">
                <label class="mb-1 text-sm font-medium text-[var(--text-primary)]"
                    >Correo</label
                >
                <input
                    type="email"
                    name="reply_to"
                    placeholder="ejemplo@gmail.com"
                    required
                    class="px-4 py-3 bg-black/30 text-[var(--text-secondary)] border border-white/20 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--accent)] placeholder-white/30"
                />
            </div>

            <div class="flex flex-col">
                <label class="mb-1 text-sm font-medium text-[var(--text-primary)]"
                    >Tu propuesta o pregunta</label
                >
                <textarea
                    name="message"
                    placeholder="Cuéntanos sobre tu idea"
                    rows="5"
                    required
                    class="px-4 py-3 bg-black/30 text-[var(--text-secondary)] border border-white/20 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--accent)] placeholder-white/30 resize-none"
                ></textarea>
            </div>

            <button
                type="submit"
                class="px-6 py-3 bg-[var(--text-primary)] text-[var(--bg-primary)] font-semibold rounded-xl shadow-md transition-opacity hover:opacity-80 cursor-pointer focus:outline-none focus:ring-2 focus:ring-[var(--accent)]"
            >
                Enviar mensaje
            </button>
        </form>

        <div
            id="form-message"
            class="hidden w-full justify-center items-center mt-4 text-[var(--text-primary)] text-lg"
        >
            ✅ ¡Gracias por tu mensaje!
        </div>
    </div>
</section>

<script type="module" is:inline>
    const form = document.getElementById("contact-form");
    const formMessage = document.getElementById("form-message");

    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        try {
            const response = await fetch(form.action, {
                method: "POST",
                body: formData,
                headers: { Accept: "application/json" },
            });
            if (response.ok) {
                form.reset();
                form.style.display = "none";
                formMessage.classList.remove("hidden");
            } else {
                const data = await response.json();
                console.error("Error response:", data);
                alert("There was a problem sending your message.");
            }
        } catch (error) {
            console.error("Error:", error);
            alert("There was a problem sending your message.");
        }
    });
</script>
