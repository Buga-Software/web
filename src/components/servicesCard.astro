---
interface Props {
  title: string;
  description: string;
  icon?: string;
  price: string;
  featured?: boolean;
}

const { title, description, icon, price } = Astro.props;
---

<div class={`
  items-center justify-center bg-white/5 backdrop-blur-xl border-white/15 p-8 rounded-3xl border transition-all duration-500 overflow-hidden group hover:shadow-2xl hover:shadow-white/10`}>

  <div class="flex flex-col h-full">
    <div class="flex justify-center mb-6">
      <div class="size-20 flex items-center justify-center rounded-full border border-white/20 text-white">
        <Fragment set:html={icon} />
      </div>
    </div>

    <h4 class="font-normal text-3xl mb-4 text-white text-center">
      {title}
    </h4>

    <p class="text-gray-400 mb-8 leading-relaxed flex-grow text-center">
      {description}
    </p>

    <div class="flex items-center justify-between pt-4 border-t border-white/5">
      <div class="flex flex-col">
        <span class="text-xs text-gray-500 uppercase tracking-wider">Desde</span>
        <span class="text-white font-bold text-lg group:hover:text-purple-400 transition-colors duration-300">
          {price}
        </span>
      </div>
      
      <button class="
        flex items-center gap-2 px-5 py-2.5 rounded-full 
        bg-white text-black font-semibold text-sm
        hover:bg-gradient-to-r hover:from-white hover:to-gray-100
        hover:shadow-lg hover:shadow-white/20
        transform hover:scale-105 active:scale-95
        transition-all duration-300 ease-out
        group/btn cursor-pointer
      ">
        <span>Solicitar</span>
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
    </div>
  </div>
</div>